---
import "../styles/readme/style.scss"
import Header from "../components/readme/header.astro"
import data from "../files/prepare.js"
const pathname = new URL(Astro.request.url).pathname
const currentPath = pathname.slice(1)
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Page Title</title>
    <base href="/" />
    <meta content="width=device-width, minimum-scale=1, initial-scale=1, shrink-to-fit=no" name="viewport" />
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="description" content="a1 cafe" />
    <link rel="shortcut icon" href="/favicon.ico" />
    <link
      href="https://fonts.googleapis.com/css?family=Raleway|Roboto|Cormorant+Garamond:300,400,600,700,800|Lato:100,90|Open+Sans:300,400,600,700,800|Gentium+Book+Basic:400,400italic|Vollkorn:400italic,400"
      rel="stylesheet"
      type="text/css"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Source+Code+Pro&family=Fira+Mono&family=Roboto+Mono&display=swap"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Noto+Serif:wght@400;700&family=Bitter:wght@400;700&family=PT+Serif:wght@400;700&display=swap"
    />
    <script type="module" define:vars={{ data }}>
      import init from "/files/init.js"
      init(data)
    </script></head
  >

  <body class="docs">
    <div class="page-wrapper">
      <Header />
      <slot />
    </div>
    <script is:inline src="/files/drawer.js"></script>
  </body>
</html>
